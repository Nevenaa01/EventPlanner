<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/card"
        android:layout_marginVertical="6dp"
        android:layout_marginTop="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@drawable/worker_card"
        android:padding="16dp"
        >

        <androidx.cardview.widget.CardView
            android:layout_width="64dp"
            android:layout_height="64dp"
            app:cardCornerRadius="16dp">

            <ImageView
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_margin="8dp"
                android:src="@mipmap/worker_example1_round"
                android:layout_gravity="center"/>

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="16dp"
            android:layout_marginEnd="8dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_horizontal"
                android:paddingLeft="8dp">

                <TextView
                    android:id="@+id/worker_name_surname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Marko Radetic"
                    android:textStyle="normal"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:layout_weight="1"/>

                <LinearLayout
                    android:id="@+id/worker_is_verified_wrapper"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/worker_status_pill"
                    android:orientation="horizontal"
                    android:layout_gravity="center_vertical"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="8dp">

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/verified"
                        android:paddingTop="3dp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Verified"
                        android:textStyle="normal"
                        android:textSize="12sp"
                        android:textColor="@color/success"
                        />
                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="4dp"
                android:gravity="center_vertical"
                android:paddingLeft="8dp">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/phone"
                    android:layout_marginRight="2dp"/>

                <TextView
                    android:id="@+id/worker_phone_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="0628562016"
                    android:textSize="12dp"
                    android:layout_marginLeft="2dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="4dp"
                android:gravity="center_vertical"
                android:paddingLeft="8dp">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/email"
                    android:layout_marginRight="2dp"/>

                <TextView
                    android:id="@+id/worker_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="markoradetic67@gmail.com"
                    android:textSize="12dp"
                    android:layout_marginLeft="2dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="4dp"
                android:gravity="center_vertical"
                android:paddingLeft="8dp">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/location"
                    android:layout_marginRight="2dp"/>

                <TextView
                    android:id="@+id/worker_location"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Podunavci, Serbia"
                    android:textSize="12dp"
                    android:layout_marginLeft="2dp"/>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>